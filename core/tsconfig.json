{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "esnext", "esnext.asynciterable"],
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitReturns": true,
    "strict": false,
    "target": "ES2018",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["**/*.spec.ts"]
}
