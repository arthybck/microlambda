{
  "name": "microlambda",
  "version": "0.0.1-alpha",
  "description": "Microlambda framework (a.k.a Âµlambda or mila) monorepo main package",
  "author": "Mario Arnautou & Arthur Brunck",
  "repository": {
    "url": "https://bitbucket.org/neoxia/microlambda"
  },
  "scripts": {
    "build": "yarn workspaces foreach -tv run build ",
    "build:core": "yarn workspace @microlambda/core run build",
    "build:cli": "yarn workspace @microlambda/cli run build",
    "build:server": "yarn workspace @microlambda/server run build",
    "build:handling": "yarn workspace @microlambda/handling run build",
    "publish:core": "yarn workspace @microlambda/core npm publish --access public",
    "publish:server": "yarn workspace @microlambda/server npm publish --access public",
    "publish:cli": "yarn workspace @microlambda/cli npm publish --access public",
    "test:handling": "yarn workspace @microlambda/handling run test"
  },
  "workspaces": [
    "cli",
    "core",
    "client",
    "docs/website",
    "generator",
    "handling",
    "plugin",
    "testing",
    "server"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.3",
    "jest": "^26.4.1",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "sinon": "^9.2.3",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn workspace foreach run lint -p"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npx eslint --fix",
      "git add"
    ]
  }
}
